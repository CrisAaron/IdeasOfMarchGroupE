<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".Signs_Main" >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:text="@string/Signs"
        android:textSize="12pt" />

	<TextView
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_alignParentTop="true"
	    android:layout_marginTop="30dp"
	    android:text="5. Expresses hopelessness or guilt. 
6. Has sudden mood or behavioral changes.
7. Lack of energy or motivation."
	    android:textSize="10pt" />

	<Button
        android:id="@+id/s_BackButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_marginBottom="60dp"
        android:layout_marginLeft="15dp"
        android:minHeight="64dp"
        android:minWidth="128dp"
        android:text="@string/Back" />

    <Button
        android:id="@+id/s_HomeButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_marginBottom="0dp"
        android:layout_marginLeft="15dp"
        android:minHeight="64dp"
        android:minWidth="256dp"
        android:text="home" />

    <Button
        android:id="@+id/s_NextButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/s_BackButton"
        android:layout_alignBottom="@+id/s_BackButton"
        android:layout_alignRight="@+id/s_HomeButton"
        android:minHeight="64dp"
        android:minWidth="128dp"
        android:text="@string/Next" />

</RelativeLayout>